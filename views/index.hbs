{{> header}}
    <div class="container">
        <br><br><br><br>
        <h2>Register as a Company</h2>
        <form method="POST" action="/register">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" aria-describedby="emailHelp"
                    placeholder="Enter Company Name" name="name">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input type="text" class="form-control" id="location" placeholder="Company Location" name="location">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <br><br>
        <a href="/login"><button type="button" class="btn btn-primary">Login Instead?</button></a>
    </div>
{{> footer}}